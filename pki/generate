    'STUB_IDP_SIGNING_CERT' => b64(idp_signing_keypair.cert.to_pem),
    'STUB_COUNTRY_SIGNING_PRIVATE_KEY' => b64(der2pk8(idp_signing_keypair.key.to_der)),
    'STUB_COUNTRY_SIGNING_CERT' => b64(idp_signing_keypair.cert.to_pem),
