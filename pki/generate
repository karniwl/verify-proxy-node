    create_file('stub_idp_signing.der', idp_signing_keypair.key.to_der)
    create_file('proxy_node_signing.crt', proxy_signing_keypair.cert.to_pem)
    create_file('proxy_node_signing.der', proxy_signing_keypair.key.to_der)
